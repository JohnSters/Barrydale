@using Microsoft.AspNetCore.Identity
@using Barrydale.Data

@inject SignInManager<ApplicationUser> SignInManager

<div class="manage-nav-container">
    <h3 class="manage-nav-title">Account Management</h3>
    <ul class="nav nav-pills flex-column">
        <li class="nav-item">
            <NavLink class="nav-link" href="Account/Manage" Match="NavLinkMatch.All">
                <i class="bi bi-person"></i> Profile
            </NavLink>
        </li>
        <li class="nav-item">
            <NavLink class="nav-link" href="Account/Manage/Email">
                <i class="bi bi-envelope"></i> Email
            </NavLink>
        </li>
        <li class="nav-item">
            <NavLink class="nav-link" href="Account/Manage/ChangePassword">
                <i class="bi bi-key"></i> Password
            </NavLink>
        </li>
        @if (hasExternalLogins)
        {
            <li class="nav-item">
                <NavLink class="nav-link" href="Account/Manage/ExternalLogins">
                    <i class="bi bi-box-arrow-in-right"></i> External logins
                </NavLink>
            </li>
        }
        <li class="nav-item">
            <NavLink class="nav-link" href="Account/Manage/TwoFactorAuthentication">
                <i class="bi bi-shield-lock"></i> Two-factor authentication
            </NavLink>
        </li>
        <li class="nav-item">
            <NavLink class="nav-link" href="Account/Manage/PersonalData">
                <i class="bi bi-file-earmark-person"></i> Personal data
            </NavLink>
        </li>
    </ul>
</div>

<style>
    .manage-nav-container {
        padding: 1.5rem 0;
    }
    
    .manage-nav-title {
        font-size: 1.2rem;
        color: #333;
        font-weight: 600;
        margin-bottom: 1.25rem;
        padding-left: 0.75rem;
    }
    
    .nav-item {
        margin-bottom: 0.5rem;
    }
    
    .nav-link {
        border-radius: 6px;
        padding: 0.75rem 1.25rem;
        color: #666;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
    }
    
    .nav-link:hover {
        background-color: rgba(52, 152, 219, 0.05);
        color: #3498db;
    }
    
    .nav-link.active {
        background-color: #3498db;
        color: white;
        font-weight: 500;
    }
    
    .nav-link i {
        margin-right: 0.75rem;
        font-size: 1.1rem;
    }
</style>

@code {
    private bool hasExternalLogins;

    protected override async Task OnInitializedAsync()
    {
        hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    }
}
